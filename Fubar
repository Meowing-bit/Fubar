        <select id="kodeSelect">
            <option value="FUBAR">FUBAR</option>
            <option value="MEOWING">MEOWING</option>
        </select>
        <textarea id="inputText" placeholder="Masukkan teks di sini..."></textarea>
        <button onclick="translateText()">Terjemahkan</button>
        <h2>Hasil Terjemahan:</h2>
        <p id="resultText"></p>
    </div>

    <script src="script.js"></script>
